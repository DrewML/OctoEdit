{
  "name": "octo-edit",
  "description": "Syntax Highlighting mini-editor for GitHub.com",
  "scripts": {
    "build": "npm-run-all clean --parallel build:js copy",
    "watch": "npm-run-all --parallel watch:files watch:js",
    "build:js": "browserify -v -d extension/content-script/ -o dist/content-script.js",
    "watch:js": "watchify -v -d extension/content-script/ -o dist/content-script.js",
    "watch:files": "watch 'npm run copy' extension",
    "copy": "cpy 'extension/*.*' dist",
    "clean": "rimraf dist && mkdir dist",
    "package": "npm run build && zip -j chrome.zip dist/*"
  },
  "author": "Andrew Levine",
  "devDependencies": {
    "babel-core": "^6.3.15",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babelify": "^7.2.0",
    "browserify": "^11.2.0",
    "browserify-css": "^0.9.1",
    "bulkify": "^1.2.0",
    "cpy-cli": "^1.0.0",
    "mkdir": "0.0.2",
    "npm-run-all": "^1.5.3",
    "rimraf": "^2.5.2",
    "watch": "^0.18.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "bulk-require": "^0.2.1",
    "codemirror": "^5.14.2"
  },
  "browserify": {
    "transform": [
      "browserify-css",
      "babelify",
      "bulkify"
    ]
  }
}
