{
    "name": "OctoEdit",
    "version": "0.5.1",
    "description": "Syntax Highlighting mini-editor for GitHub.com",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [{
        "matches": ["*://github.com/*"],
        "js": ["content-script.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "pagenav-listener.js"
    ]
}
